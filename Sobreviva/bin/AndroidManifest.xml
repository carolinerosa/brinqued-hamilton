<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sobreviva"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.sobreviva.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sobreviva.activity.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="sobreviva.MenuJogarActivity"
            android:label="@string/title_activity_menu_jogar" >
        </activity>
        <activity
            android:name="com.example.sobreviva.activity.SinglePlayerActivity"
            android:label="@string/title_activity_single_player" >
        </activity>
        <activity
            android:name="com.example.sobreviva.activity.ActivityDeviceList"
            android:label="@string/title_activity_activity_device_list" >
        </activity>
        <activity
            android:name="com.example.sobreviva.activity.MultiPlayerActivity"
            android:label="@string/title_activity_multi_player" >
        </activity>
        <activity
            android:name="com.example.sobreviva.activity.Loja"
            android:label="@string/title_activity_loja" >
        </activity>
        <activity
            android:name="com.example.sobreviva.activity.LojaBolinha"
            android:label="@string/title_activity_loja_bolinha" >
        </activity>
    </application>

</manifest>